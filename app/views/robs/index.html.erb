<h1>List of Duffs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Content</th>
    
  </tr>

<% @robs.each do |rob| %>
  <tr>
    <td><%= rob.name %></td>
    <td><%= rob.email %></td>
     <td><%= rob.content %></td>
   <td><%= link_to 'Check the details', rob_path(rob.id) %></td>
   
  
    <td><%= link_to link_to "Edit this duff", edit_rob_path(rob.id) %></td>
    <td><%= link_to link_to 'Delete this duff', rob_path(rob.id), method: :delete ,data: { confirm: 'Are you sure?' } %></td>
    
  </tr>
<% end %>
 
</table>

<br>
<%= link_to 'Post a new duff', new_rob_path %>
